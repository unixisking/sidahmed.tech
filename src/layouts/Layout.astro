---
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const theme = globalThis.window ? localStorage.getItem("theme") : null;
---

<!doctype html>
<html class={`${theme ? theme : ""}`} lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/prism-holi-theme.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="w-[800px] m-auto max-w-[calc(100%_-_2rem)] text-[white] text-xl leading-[1.6] p-4"
  >
    <Navbar />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  a {
    @apply text-black dark:text-white;
  }
  h1 {
    @apply text-4xl font-bold leading-none mb-[1em];
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  p {
    @apply text-[1rem] text-black dark:text-white font-normal;
  }
  hr {
    @apply my-6 border-neutral-200 dark:border-neutral-800;
  }

  .dark {
    @apply bg-[#28282B];
  }
</style>
